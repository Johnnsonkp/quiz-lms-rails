<% if notice || alert %>
  <div id="flash-messages" class="fixed top-0 left-0 right-0 z-50">
    <% if notice %>
      <div class="bg-green-500 text-white px-6 py-4 shadow-lg">
        <div class="container mx-auto flex justify-between items-center">
          <span class="font-medium"><%= notice %></span>
          <button onclick="this.parentElement.parentElement.remove()" class="text-white hover:text-gray-200 text-xl font-bold">&times;</button>
        </div>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="bg-red-500 text-white px-6 py-4 shadow-lg">
        <div class="container mx-auto flex justify-between items-center">
          <span class="font-medium"><%= alert %></span>
          <button onclick="this.parentElement.parentElement.remove()" class="text-white hover:text-gray-200 text-xl font-bold">&times;</button>
        </div>
      </div>
    <% end %>
  </div>
  
  <!-- Auto-hide flash messages after 5 seconds -->
  <script>
    setTimeout(function() {
      var flashMessages = document.getElementById('flash-messages');
      if (flashMessages) {
        flashMessages.style.opacity = '0';
        flashMessages.style.transition = 'opacity 0.5s ease-out';
        setTimeout(function() {
          flashMessages.remove();
        }, 500);
      }
    }, 5000);
  </script>
<% end %>